<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <ImageView
        android:id="@+id/addedPic"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:contentDescription="oo"
        android:layout_gravity="center|left"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/textView6" />

    <TextView
        android:layout_width="match_parent"
        android:background="#35414F"
        android:textColor="#049abe"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="#prześwitujące #urocze"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/addedPic"
        android:layout_alignStart="@+id/addedPic" />

</RelativeLayout>
